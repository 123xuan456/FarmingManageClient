<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/title_bground" 
        >
        <LinearLayout 
		    android:id="@+id/ImageView_Linearlayout_Back"
		     style="@style/ImageView_Linearlayout_Back"
		    >
		      <ImageView
		          android:id="@+id/img_comment_back"
            style="@style/ImageView_Back" />
		     <TextView 
		         android:id="@+id/textView_Title_Left"
		        style="@style/TextView_Title_Left"
		        />
		</LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            style="@style/TextView_Title"
            android:text="@string/tv_addtianyangmanage"
            />
        <TextView
            android:id="@+id/tv_pro_save"
            style="@style/TextView_InReleativeRight"
            android:background="@drawable/add"
            android:visibility="gone"
            />
    </RelativeLayout>

    <ScrollView style="@style/ff">

        <LinearLayout
            style="@style/ff"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="服务站名称:" />

                <TextView
                    android:id="@+id/tv_servicestation"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="服务站编号:" />

                <TextView
                    android:id="@+id/et_servicenumber"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="农作物品种:" />

                <EditText
                    android:id="@+id/et_cropPtype"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />


            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="实施人员    :" />

                <EditText
                    android:id="@+id/et_actionPerson"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="记  录  人    :" />

                <TextView
                    android:id="@+id/tv_registUser"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                    android:text="管理员" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="农作物名称:" />

                <TextView
                    android:id="@+id/tv_cropType"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />


            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="播种日期    :" />

                <TextView
                    android:id="@+id/tv_seeddate"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="移栽日期    :" />

                <TextView
                    android:id="@+id/tv_transplantdate"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="登记日期    :" />

                <TextView
                    android:id="@+id/tv_registdate"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
                <!-- android:text="2015-08-27"  -->
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="操作田洋    :" />

                <TextView
                    android:id="@+id/tv_ploughId"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop">

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="备        注    :" />

                <EditText
                    android:id="@+id/tv_actionBak"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                    android:text="" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                style="@style/Button_Style"
                android:layout_marginBottom="5dp"
                android:text="@string/tv_save" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>