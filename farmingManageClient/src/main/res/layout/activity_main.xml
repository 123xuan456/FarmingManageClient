<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
     android:weightSum="10"
    >
    <RelativeLayout
        style="@style/Relative_Title"
         >
        <TextView
            style="@style/TextView_Title"
            android:text="@string/tv_main_title"
            />
        <LinearLayout 
            android:id="@+id/linear_more"
             style="@style/TextView_InReleativeRight_Moreeeeeeee"
            android:orientation="vertical"
            >
         <TextView
            android:id="@+id/tv_more"
            style="@style/TextView_InReleativeRight_More"
            android:background="@drawable/iv_more"
             android:visibility="gone"
            />
        </LinearLayout>
        <!--  android:background="@drawable/iv_more" -->
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9.2"
        />
 <LinearLayout 
         android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.8"
        android:gravity="center"
        android:background="@drawable/bg_bottom"
        >
       <Button 
           android:id="@+id/btn_promanage"
           style="@style/Main_Top_Navigation"
          android:background="@drawable/pro_manage_naomal_press"
           />

     <Button
         android:id="@+id/btn_proplan"
         style="@style/Main_Top_Navigation"
         android:background="@drawable/plan_task_normal" />

     <Button
           android:id="@+id/btn_probaseinfo"
           style="@style/Main_Top_Navigation"
            android:background="@drawable/base_info_normal"
           />
    </LinearLayout>
</LinearLayout>
