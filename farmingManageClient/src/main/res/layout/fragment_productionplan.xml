<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <ScrollView style="@style/ff" >
        <LinearLayout
            style="@style/ff"
            android:gravity="center"
            android:orientation="vertical" 
            android:weightSum="5"
            >
            <LinearLayout 
               style="@style/LinearLayout_f0dp"
               android:layout_weight="1"
               android:orientation="horizontal"
                >
                <LinearLayout 
                     android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    >
                <ImageView 
                    android:src="@drawable/pro_plan"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerInside"
                    />
                </LinearLayout>
                <LinearLayout 
                   style="@style/ww"
                   android:orientation="vertical"
                   android:layout_marginTop="2dp"
                    >
                    <TextView 
                         style="@style/TextView_type"
                         android:text="加工类型"
                        />
                    <TextView 
                         style="@style/TextView_type"
                         android:text="Processing Type"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
               style="@style/LinearLayout_f0dp"
               android:layout_weight="1.5"
               android:orientation="horizontal"
                >
                <LinearLayout 
                    style="@style/Linear_WidthWeight1"
                    android:background="@drawable/bg_equationequation"
                     android:padding="4dp"
                    >
                    <ImageView 
                    android:id="@+id/iv_costequation"
                    android:src="@drawable/costequation"
                     android:padding="5dp"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                    />
                </LinearLayout>
                 <LinearLayout 
                    style="@style/Linear_WidthWeight1"
                   android:background="@drawable/bg_proplan"
                     android:padding="4dp"
                    >
                <ImageView 
                    android:id="@+id/iv_proplan"
                    android:src="@drawable/proplan"
                     android:padding="5dp"
                      android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                    />
                 </LinearLayout>
                 
                  <LinearLayout 
                    style="@style/Linear_WidthWeight1"
                   android:background="@drawable/bg_proplantable"
                     android:padding="4dp"
                    >
                <ImageView 
                    android:id="@+id/iv_proplantable"
                    android:padding="5dp"
                      android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                    android:src="@drawable/proplantable"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
               style="@style/LinearLayout_f0dp"
               android:layout_weight="1.5"
               android:orientation="horizontal"
                >
                <LinearLayout 
                     android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    >
                <ImageView 
                    android:src="@drawable/pro_plan"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerInside"
                    />
                </LinearLayout>
                <LinearLayout 
                   style="@style/ww"
                   android:orientation="vertical"
                   android:layout_marginTop="2dp"
                    >
                    <TextView 
                         style="@style/TextView_type"
                         android:text="种植类型"
                        />
                    <TextView 
                         style="@style/TextView_type"
                         android:text="Plating Type"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
               style="@style/LinearLayout_f0dp"
               android:layout_weight="1"
               android:orientation="horizontal"
                >
                <LinearLayout 
                    style="@style/Linear_WidthWeight1"
                     android:background="@drawable/bg_equationequation"
                     android:padding="4dp"
                    >
                <ImageView 
                     android:id="@+id/iv_costequation_plant"
                    android:src="@drawable/costequation"
                   android:padding="5dp"
                      android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                    />
                </LinearLayout>
                
                <LinearLayout 
                    style="@style/Linear_WidthWeight1"
                     android:background="@drawable/bg_proplan"
                     android:padding="4dp"
                    >
                <ImageView 
                     android:id="@+id/iv_proplan_plant"
                    android:src="@drawable/proplan"
                   android:padding="5dp"
                      android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                    />
                </LinearLayout>
                
                <LinearLayout 
                    style="@style/Linear_WidthWeight1"
                     android:background="@drawable/bg_proplantable"
                     android:padding="4dp"
                    >
                     <ImageView 
                     android:id="@+id/iv_proplantable_plant"
                    android:src="@drawable/proplantable"
                    android:padding="5dp"
                      android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                    />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
