<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        style="@style/Relative_Title"
        
         >
        <LinearLayout 
		    android:id="@+id/ImageView_Linearlayout_Back"
		     style="@style/ImageView_Linearlayout_Back"
		    >
		     <ImageView
		         android:id="@+id/img_comment_back"
            style="@style/ImageView_Back" />
		     <TextView 
		         android:id="@+id/textView_Title_Left"
		        style="@style/TextView_Title_Left"
		        />
		</LinearLayout>
        <TextView
            style="@style/TextView_Title"
            android:text="查看收货信息"
            />
        <TextView
            android:id="@+id/tv_pro_add"
            style="@style/TextView_InReleativeRight"
            android:text="添加"
            android:visibility="gone"
            />
    </RelativeLayout>
    <ScrollView style="@style/ff" >
        <LinearLayout
            style="@style/ff"
            android:gravity="center"
            android:orientation="vertical" >
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="          区域:" />
                <TextView
                    android:id="@+id/tv_dc"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="   发货单号:" />
                <TextView
                     android:id="@+id/tv_loadCode"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="      供应商:" />
                <TextView
                     android:id="@+id/tv_vendorName"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="      经办人:" />
                <TextView
                    android:id="@+id/tv_userName"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="         备注:" />
                <TextView
                     android:id="@+id/tv_remark"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="   收货单号:" />
                <TextView
                    android:id="@+id/tv_receiveCode"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="供应商类型:" />
                <TextView
                    android:id="@+id/tv_vendorType"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="   经办时间:" />
                <TextView
                    android:id="@+id/tv_time"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="   商品名称:" />
                <TextView
                    android:id="@+id/tv_goodName"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="单价(元/斤):" />
                <TextView
                    android:id="@+id/tv_goodPricem"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="   是否包装:" />
                <TextView
                    android:id="@+id/tv_goodUnitm"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="收货总重(斤):" />
                <TextView
                     android:id="@+id/tv_totalGoodWeightm"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="   收货件数:" />
                <TextView
                     android:id="@+id/tv_receivePackagesm"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="   件重(斤):" />
                <TextView
                    android:id="@+id/tv_packageWeightm"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="   金额(元):" />
                <TextView
                    android:id="@+id/tv_goodMoneym"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
             <LinearLayout 
            	style="@style/fw"    
                android:orientation="horizontal"
                >
 			<Button 
 			    android:id="@+id/btn_last"
                style="@style/Query_Button_Next"
                android:text="@string/tv_last"
                android:visibility="gone"
                />
 			<Button 
 			    android:id="@+id/btn_next"
                style="@style/Query_Button_Next"
                android:text="@string/tv_next"
                 android:visibility="gone"
                />
            </LinearLayout>
             </LinearLayout>
    </ScrollView>
</LinearLayout>
