<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/title_bground" >

        <LinearLayout
            android:id="@+id/ImageView_Linearlayout_Back"
            style="@style/ImageView_Linearlayout_Back" >

            <ImageView
                android:id="@+id/img_comment_back"
                style="@style/ImageView_Back" />

            <TextView
                android:id="@+id/textView_Title_Left"
                style="@style/TextView_Title_Left" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextView_Title"
            android:text="@string/tv_addtianyangmanage" />

        <TextView
            android:id="@+id/tv_pro_save"
            style="@style/TextView_InReleativeRight"
            android:background="@drawable/add"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView style="@style/ff" >

        <LinearLayout
            style="@style/ff"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="服务站名称:" />

                <TextView
                    android:id="@+id/tv_servicestation"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="服务站编号:" />

                <TextView 
                    android:id="@+id/et_servicenumber"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="收获人员    :" />

                <EditText 
                    android:id="@+id/tv_actionPerson"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="收获日期    :" />

                <TextView 
                    android:id="@+id/tv_harvestdate"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="记  录  人    :" />

                <TextView 
                    android:id="@+id/tv_registUser"
                    android:text="管理员"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>

            <View style="@style/Sperate_view" />

            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >

                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="登记日期    :" />

                <TextView 
                     android:id="@+id/tv_registdate"
                    style="@style/EditText__Promaangelist_Table_LeftTwo" />
            </LinearLayout>
            <LinearLayout 
            	style="@style/fw"    
                android:orientation="horizontal"
                >
 			<Button 
 			    android:id="@+id/btn_adddetail"
                style="@style/Query_Button_Next"
                android:text="增加明细"
                android:background="@android:color/darker_gray"
                />
 			<Button 
 			    android:id="@+id/btn_save"
                style="@style/Query_Button_Next"
                android:text="保存"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>