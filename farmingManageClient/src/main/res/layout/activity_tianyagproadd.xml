<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/title_bground" >
        <LinearLayout 
		    android:id="@+id/ImageView_Linearlayout_Back"
		     style="@style/ImageView_Linearlayout_Back"
		    >
		     <ImageView
		         android:id="@+id/img_comment_back"
            style="@style/ImageView_Back" />
		     <TextView 
		         android:id="@+id/tv_title"
		        style="@style/TextView_Title_Left"
		        />
		</LinearLayout>
        <TextView
            android:id="@+id/tv_pro_save"
            style="@style/TextView_InReleativeRight"
            android:text="@string/tv_save"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout 
         android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        >
       <Button 
           android:id="@+id/btn_tianyangadd_daily"
           style="@style/Main_AddTop_Navigation"
           android:text="日常农事"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           />
       <Button 
           android:id="@+id/btn_tianyangadd_fertilizeruse"
           style="@style/Main_AddTop_Navigation"
           android:text="肥料使用"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           />
       <Button 
           android:id="@+id/btn_tianyangadd_pesticideuse"
           style="@style/Main_AddTop_Navigation"
           android:text="农药使用"
             android:layout_marginRight="5dp"
           />
    </LinearLayout>
       <android.support.v4.view.ViewPager
        android:id="@+id/vp_tianyangadd_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
         android:layout_weight="1"
         android:layout_marginTop="5dp"
        />
</LinearLayout>
