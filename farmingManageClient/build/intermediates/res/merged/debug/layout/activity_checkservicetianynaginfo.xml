<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
         style="@style/Relative_Title" >
        <LinearLayout
            android:id="@+id/ImageView_Linearlayout_Back"
            style="@style/ImageView_Linearlayout_Back" >

            <ImageView
                android:id="@+id/img_comment_back"
                style="@style/ImageView_Back" />

            <TextView
                android:id="@+id/textView_Title_Left"
                style="@style/TextView_Title_Left" />
        </LinearLayout>
        <TextView
            style="@style/TextView_Title"
            android:text="查询服务站田洋信息"
            />
        <TextView
            android:id="@+id/tv_pro_add"
            style="@style/TextView_InReleativeRight"
            android:text="添加" 
            android:visibility="gone"
            />
    </RelativeLayout>
    <ScrollView style="@style/ff" >

        <LinearLayout
            style="@style/ff"
            android:gravity="center"
            android:orientation="vertical" >
                <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="\u0020\u0020\u0020所属服务站:" />

                <TextView 
                    android:id="@+id/et_station"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="\u0020\u0020\u0020\u0020\u0020\u0020田地编号:" />

                <TextView 
                       android:id="@+id/et_ploughCode"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="\u0020\u0020\u0020\u0020\u0020\u0020农户名称:" />

                <TextView 
                     android:id="@+id/et_ploughFarm"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="田地面积(亩):" />

                <TextView 
                    android:id="@+id/et_ploughArea"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
            <LinearLayout style="@style/Layout_Promaangelist_Table_MarTop" >
                <TextView
                    style="@style/TextView__Promaangelist_Table_LeftOne"
                    android:text="\u0020\u0020\u0020\u0020\u0020\u0020土壤信息:" />

                <TextView 
                     android:id="@+id/et_soilState"
                    style="@style/EditText__Promaangelist_Table_LeftTwo"
                     />
            </LinearLayout>
            <View style="@style/Sperate_view" />
               <LinearLayout 
            	style="@style/fw"    
                android:orientation="horizontal"
                >
 			<Button 
 			    android:id="@+id/btn_last"
                style="@style/Query_Button_Next"
                android:text="@string/tv_last"
                />
 			<Button 
 			    android:id="@+id/btn_next"
                style="@style/Query_Button_Next"
                android:text="@string/tv_next"
                />
            </LinearLayout>
            </LinearLayout>
    </ScrollView>

</LinearLayout>
